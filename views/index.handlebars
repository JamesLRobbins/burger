<h3>Eat-Da-Burger</h3>

<div class="container">
    <div class="row">
        <div class="col-md-6">
<ul>
  {{#each burgers}}
    <li>{{this.burger_name}} <button class="devour" data-id="{{this.id}}">Devour</button></li>
  {{/each}}
</ul>
</div>
<div class="col-md-6">
    <ul>
        {{#each burgers}}
            {{#if this.devoured}}
                <li>{{this.burger_name}} </li>
            {{/if}}
        {{/each}}
    </ul>
    </div>
    </div>



<form class="create-form">

    <div class="forms-group">
        <textarea type="text" id="burger" name="name" rows="6"></textarea>
    </div>

    <button type="submit" id="submit">Add Burger</button>

</form>

</div>
